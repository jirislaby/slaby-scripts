#!/usr/bin/bash

for S in series series.conf; do
	if [ -f "$S" ]; then
		SERIES="$S"
		break
	fi
done

if [ -z "$SERIES" ]; then
	echo no series file
	exit 1
fi

FORCE=
if [ "$1" = "-f" ]; then
	shift
	FORCE=-f
fi

git rm $FORCE "$@"

OLD_IFS="$IFS"
IFS='|'
RE="'$*'"
IFS="$OLD_IFS"

grep -vE "^\s*($RE)$" "$SERIES" > series1
mv series1 "$SERIES"
