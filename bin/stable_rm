#!/bin/bash

for S in series series.conf; do
	if [ -f "$S" ]; then
		SERIES="$S"
		break
	fi
done

if [ -z "$SERIES" ]; then
	echo no series file
	exit 1
fi

FORCE=
if [ "$1" = "-f" ]; then
	shift
	FORCE=-f
fi

for file; do
	git rm $FORCE "$file"
	grep -v "^\s*$file$" "$SERIES" > series1
	mv series1 "$SERIES"
done
