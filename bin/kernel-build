#!/bin/bash

declare -a CROSS_OPTS=()
declare -a DFF=()
declare -a MAKE_OPTS=()
CC_IS_SET=0
CROSS_DESTDIR="../a/arch"
DESTDIR="../bu"
DESTDIR_CLANG="../a/bu_clang"
DUMP_MAKE=0

while getopts "a:A:d:f:cC:mMwW" OPT; do
	case "$OPT" in
		a) DESTDIR="$OPTARG" ;;
		A) CROSS_DESTDIR="$OPTARG" ;;
		c) MAKE_OPTS+=('C=1')
		   CROSS_OPTS+=('-c')
		   ;;
		C) MAKE_OPTS+=("CC=$OPTARG")
		   CC_IS_SET=1
		   ;;
		d) readarray -t DFF < <(git diff --name-only "$OPTARG"|sed -n 's@\.c$@.o@ p')
		   test "${#DFF[@]}" -eq 0 && exit 1
		   ;;
		f) readarray -t DFF < "$OPTARG"
		   test "${#DFF[@]}" -eq 0 && exit 1
		   ;;
		m) DUMP_MAKE=1 ;;
		w) MAKE_OPTS+=("W=1") ;;
		W) MAKE_OPTS+=("W=12") ;;
		*) exit 1 ;;
	esac
done

if [ "${#DFF[@]}" -ne 0 ]; then
	echo Files: "${DFF[@]}"
	set -- "${DFF[@]}"
else
	shift $(($OPTIND-1))
fi

declare -A DRV_ARCH=(
