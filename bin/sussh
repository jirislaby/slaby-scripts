#!/bin/sh

USER=jslaby
SSH=ssh -CX -o StrictHostKeyChecking=no

while getopts "mr" OPT; do
	case "$OPT" in
		m) SSH=mosh
		;;
		r) USER=root
		;;
	esac
done

shift $(($OPTIND-1))
HOST=$1
shift

for SUFFIX in arch.suse.de suse.de suse.cz qa.suse.de; do
	FQDN=$HOST.$SUFFIX
	IP=`host $FQDN $SU_NAMESERVER | sed -ne 's/.* has address // p'`
	if [ -n "$IP" ]; then
		break
	fi
done

if [ -z "$IP" ]; then
	echo "no IP found for $HOST"
	exit 1
fi

ssh-keygen -R "$IP" >/dev/null 2>&1

set -x

$SSH "$USER@$IP" $@
