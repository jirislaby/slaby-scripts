alias cdk='cd_existing ~/kernel-source ~/repos/suse/kernel-source/'
alias shm='cd_existing /dev/shm/jslaby/ /dev/shm/'

function stable_dry() {
	patch --dry-run -p1 -i ~/repos/stable-queue/queue-4.13/"$1"
}
